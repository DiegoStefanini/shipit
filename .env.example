# ShipIt v2 â€” Environment Configuration
# Copy to .env and adjust values for your environment

# Server
PORT=3001
DATA_DIR=/var/lib/shipit

# Authentication (CHANGE THESE IN PRODUCTION)
JWT_SECRET=change-me-in-production
ADMIN_USER=admin
ADMIN_PASSWORD=changeme

# Gitea integration
GITEA_URL=http://192.168.1.51:3000
GITEA_TOKEN=your-gitea-api-token

# Webhooks
WEBHOOK_SECRET=change-me-webhook-secret

# Domain configuration (apps become {name}.{BASE_DOMAIN})
BASE_DOMAIN=stefaniniserver.com
DASHBOARD_DOMAIN=deploy.stefaniniserver.com

# Self-deploy (ShipIt auto-update via Gitea webhook)
SELF_REPO=diegostefanini/shipit
SELF_DEPLOY_ENABLED=false

# Logging (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info
