# ShipIt v2 - Environment Configuration
# Copy this file to /opt/shipit/.env and update the values

# --- Server ---
PORT=3001
DATA_DIR=/var/lib/shipit

# --- Gitea ---
GITEA_URL=http://192.168.1.51:3000
GITEA_TOKEN=

# --- Domain Configuration ---
# Base domain for deployed apps (apps become {name}.{BASE_DOMAIN})
BASE_DOMAIN=stefaniniserver.com
# Domain where the ShipIt dashboard is accessible
DASHBOARD_DOMAIN=deploy.stefaniniserver.com

# --- Authentication ---
ADMIN_USER=admin
ADMIN_PASSWORD=changeme
JWT_SECRET=change-me-in-production

# --- Webhooks ---
WEBHOOK_SECRET=change-me-webhook-secret

# --- Self-Deploy ---
SELF_REPO=diegostefanini/shipit
SELF_DEPLOY_ENABLED=false
